<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eventify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Font family. -->
        <item name="android:fontFamily">@font/inter</item>
        <!-- Primary color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="android:statusBarColor">@color/red</item>

        <item name="android:searchViewStyle">@style/Search_bar</item>
    </style>

    <style name="Button.Red" parent="Theme.Eventify">
        <item name="cornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.White" parent="Theme.Eventify">
        <item name="cornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Textfield_red_stroke">
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_default</item>
    </style>

    <style name="Search_bar" parent="Theme.Eventify">
        <item name="android:background">@drawable/rounded_corners_focus</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:searchHintIcon">@android:color/transparent</item>
        <item name="android:searchIcon">@drawable/search</item>
        <item name="android:queryBackground">@null</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerSize">50%</item>
    </style>

</resources>